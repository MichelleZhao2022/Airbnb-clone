<div class="bg-white">
  <div class="pt-6">
    <div class="mx-auto flex max-w-2xl items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8 mb-2">
      <h1 class="font-semibold text-4xl"><%= @property.name %></h1>
    </div>

    <div class="mx-auto flex max-w-2xl flex justify-between items-center space-x-2 px-4 sm:px-6 lg:max-w-7xl lg:px-8">
      <div>
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-4 h-4 inline-block">
            <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
          </svg>
          <%= @property.average_rating.round(2) %> <%= @property.reviews_count %> reviews
        </span>
        <span> <%= @property.city %>, <%= @property.country %></span>
      </div>
    <div>
      <%= link_to class:"mr-4" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 inline-block">
          <path stroke-linecap="round" stroke-linejoin="round" d="M7.217 10.907a2.25 2.25 0 100 2.186m0-2.186c.18.324.283.696.283 1.093s-.103.77-.283 1.093m0-2.186l9.566-5.314m-9.566 7.5l9.566 5.314m0 0a2.25 2.25 0 103.935 2.186 2.25 2.25 0 00-3.935-2.186zm0-12.814a2.25 2.25 0 103.933-2.185 2.25 2.25 0 00-3.933 2.185z" />
        </svg>
        <span>Share</span>
      <% end %>
      
        <svg xmlns="http://www.w3.org/2000/svg"
          data-user-logged-in="<%= user_signed_in? %>"
          data-user-id="<%= current_user&.id %>"
          data-property-id="<%= @property.id %>"
          data-favorite-id="<%= @property.favorites.find_by(user: current_user)&.id %>"
          data-favorited="<%=@property.favorited_by?(current_user) %>"
          data-controller="favorites"
          data-action="click->favorites#favorite"
          fill="none" viewBox="0 0 24 24" 
          stroke-width="1.5" 
          stroke="currentColor" 
          class="w-4 h-4 inline-block">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
        <span class="ml-1">Save</span>
      
      </div>
    </div>

    <!-- Image gallery -->
    <div class="mx-auto mt-6 max-w-2xl sm:px-6 lg:gap-x-8 lg:px-8">
      <div class="aspect-auto overflow-hidden rounded-lg lg:block">
        <%= image_tag @property.default_image, class:"w-full h-full object-center object-cover" %>      
      </div>
    </div>

    <!-- Product info -->
    <div class="mx-auto max-w-2xl px-4 pt-10 pb-16 sm:px-6 lg:grid lg:max-w-7xl lg:grid-cols-3 lg:grid-rows-[auto,auto,1fr] lg:gap-x-8 lg:px-8 lg:pt-16 lg:pb-24">
      <div class="lg:col-span-2 lg:border-r lg:border-gray-200 lg:pr-8">
        <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"><%= @property.name %></h1>
      </div>

      <!-- Options -->
      <%= render "reservations" %>

      <div class="py-10 lg:col-span-2 lg:col-start-1 lg:border-r lg:border-gray-200 lg:pt-6 lg:pb-16 lg:pr-8">
        <div class="space-y-6">
          <p class="text-base text-gray-900"><%= @property.description %></p>
        </div>
      </div>
    </div>
    
    <div class="mx-auto mt-6 max-w-2xl sm:px-6 lg:gap-x-8 lg:px-8">
      <div class="border-t border-gray-300"></div>
    </div>
    <%= render "reviews" %>
  </div>
</div>